{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Job Metrics Schema",
  "description": "Metrics for a single job in DocuSearch application",
  "properties": {
    "job_id": {
      "type": "string",
      "pattern": "^[a-f0-9]{8}$",
      "description": "8-character hexadecimal job identifier"
    },
    "start_time": {
      "type": "number",
      "description": "Job start time as Unix timestamp"
    },
    "end_time": {
      "type": ["number", "null"],
      "description": "Job end time as Unix timestamp"
    },
    "total_files": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of files in the job"
    },
    "successful_files": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of successfully processed files"
    },
    "failed_files": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of failed file processing attempts"
    },
    "skipped_files": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of files skipped during processing"
    },
    "processing_time": {
      "type": "number",
      "minimum": 0,
      "description": "Total processing time in seconds"
    },
    "status": {
      "type": "string",
      "enum": ["processing", "completed", "failed"],
      "description": "Job status"
    }
  },
  "required": [
    "job_id", "start_time", "end_time", "total_files", 
    "successful_files", "failed_files", "skipped_files", 
    "processing_time", "status"
  ],
  "additionalProperties": false
}
